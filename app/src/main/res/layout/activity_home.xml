<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/anime" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="23dp"
            android:text="Deliver to"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="45dp"
            android:text="Home"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/bellButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/circular_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bell"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/cartButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/circular_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cart2"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <SearchView
            android:id="@+id/searchBar"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/allCategoriesButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/yellow"
            android:text="All Categories" />

        <Button
            android:id="@+id/menButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="188dp"
            android:backgroundTint="@color/gray"
            android:text="Men" />

        <Button
            android:id="@+id/womenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="290dp"
            android:backgroundTint="@color/gray"
            android:text="Women" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="360dp"

        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <ImageView
            android:id="@+id/greenBackground"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:rotation="184"
            app:srcCompat="@drawable/backdrop" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-40dp"
            app:srcCompat="@drawable/model" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="New"
            android:textColor="@color/yellow"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:text="Arrival"
            android:textColor="@color/yellow"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="With Free Shipping"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/shopNowButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/yellow"
            android:text="Shop Now"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/popularProductsCard"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/realGray">

        <TextView
            android:id="@+id/popularProductsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Popular Products" />

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="240dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/zara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="10dp"
                android:text="Zara"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/zara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:text="Wool Blend"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/zara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="198dp"
                android:layout_marginLeft="10dp"
                android:text="Midi Skirt"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/zaraPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="10dp"
                android:text="$99"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/card1">

                <ImageView
                    android:id="@+id/model3"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/model3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="240dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="10dp"
                android:text="GAP"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/gap1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:text="SoftFlex Slim"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/gap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="198dp"
                android:layout_marginLeft="10dp"
                android:text="Jeans"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/gapPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="10dp"
                android:text="$80"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/card2"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/model2"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/model4" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="240dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/uniqlo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="10dp"
                android:text="Uniqlo"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/uniqlo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:text="Relax Dry"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/uniqlo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="198dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/uniqloPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="10dp"
                android:text="$49"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/card3"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/model4"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/model3" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>